<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>

<configuration>
    <property>
        <name>fs.defaultFS</name>
        <value>file:///</value>
    </property>
    <property>
        <name>fs.azure.blob.deletestrategy</name>
        <value>Immediate</value>
    </property>
    <property>
        <name>fs.azure.block.blob.with.compaction.dir</name>
        <value>/hbase/WALs,/tmp/myblobfiles</value>
    </property>
    <property>
        <name>fs.azure.enable.append.support</name>
        <value>true</value>
    </property>
    <property>
        <name>fs.azure.delete.threads</name>
        <value>50</value>
    </property>
    <property>
        <name>fs.azure.rename.threads</name>
        <value>50</value>
    </property>
    <property>
        <name>fs.AbstractFileSystem.wasb.Impl</name>
        <value>org.apache.hadoop.fs.azure.Wasb</value>
    </property>
    <property>
        <name>fs.azure.atomic.rename.dir</name>
        <value>/hbase,/</value>
    </property>
    <property>
        <name>fs.azure</name>
        <value>org.apache.hadoop.fs.azure.NativeAzureFileSystem</value>
    </property>
</configuration>
