// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
  "name": "Python with Pyspark and Delta Lake",
  "dockerComposeFile": "../docker/build/docker-compose.yml",
  "service": "delta-spark",
  "workspaceFolder": "/workspace",
  // Configure tool-specific properties.
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.pylint",
        "ms-python.black-formatter",
        "ms-python.isort",
        "ms-python.debugpy",
        "ms-toolsai.jupyter",
        "ms-toolsai.vscode-jupyter-cell-tags",
        "ms-toolsai.jupyter-renderers",
        "ms-toolsai.vscode-jupyter-slideshow",
        "ms-python.vscode-pylance",
        "ms-toolsai.jupyter-keymap"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "files.eol": "\n",
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "/bin/bash",
            "icon": "terminal-bash"
          }
        },
        "black-formatter.path": [
          "/usr/local/bin/black"
        ],
        "sonarlint.pathToNodeExecutable": "/root/.nvm/versions/node/v21.0.0/bin/node",
        "jupyter.kernels.trusted": [
          "/usr/local/share/jupyter/kernels/pysparkkernel/kernel.json",
          "/usr/local/share/jupyter/kernels/sparkkernel/kernel.json"
        ],
        "python.languageServer": "Default",
        "python.formatting.provider": "black",
        "python.formatting.blackPath": "/usr/local/bin/black",
        "python.linting.pylintPath": "/usr/local/bin/pylint",
        "python.testing.pytestPath": "/usr/local/bin/pytest",
        "python.analysis.typeCheckingMode": "basic",
        "python.testing.pytestArgs": [
          "tests -v"
        ],
        "python.testing.unittestEnabled": false,
        "python.testing.pytestEnabled": true,
        "[python]": {
          "editor.codeActionsOnSave": {
            "source.organizeImports": true
          }
        }
      }
    }
  }
  // Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
  // "remoteUser": "root"
}